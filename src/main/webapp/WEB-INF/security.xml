<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-4.2.xsd">



	<http auto-config="true" use-expressions="true">
		<session-management>
			<concurrency-control max-sessions="1" />
		</session-management>

		<!-- permettre l'acces aux feuille de style, img, page public et JS Ã  tous 
			le monde -->
		<!-- isAnonymous() or hasRole('ROLE_ANONYMOUS') -->
		<intercept-url pattern="/css/**" access="permitAll" />
		<intercept-url pattern="/img/**" access="permitAll" />

		<csrf disabled="true" />



		<intercept-url pattern="/public/**" access="isAnonymous()" />
		<intercept-url pattern="/index**" access="isAnonymous()" />

		<intercept-url pattern="/private/Collaborateur/*"
		access="hasRole('Collaborateur')" />
		 <intercept-url pattern="/private/Responsable/*" access="hasRole('Responsable')" 
			/> 


		 <intercept-url pattern="/private/Admin/*" access="hasRole('Admin')" 
			/> 

		<intercept-url pattern="/**" access="denyAll" />

		<form-login login-page="/index.jsp" default-target-url="/goToHome"
			authentication-failure-url="/public/logout" />

		<logout logout-success-url="/public/logout" logout-url="/logout"
			delete-cookies="JSESSIONID" invalidate-session="true" />

		<remember-me data-source-ref="dataSource" />

	</http>

	<authentication-manager>
		<authentication-provider>
			 <jdbc-user-service data-source-ref="dataSource"
				
				users-by-username-query="select username,password,enabled from User where u=?"
				authorities-by-username-query="select u.email, r.label from User u1, Role u2 where u.id = r.id and u1.email =?" />
		
		</authentication-provider>
	</authentication-manager>

